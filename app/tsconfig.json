{
  "compilerOptions": {
    "target": "ES2022",
    "types": [
      "vite/client",
    ],
    "module": "ES2022",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "out",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs",
  ],
  "exclude": [
    "node_modules"
  ],
  "paths": {
    "shared/*": [
      "../shared/*"
    ]
  }
}